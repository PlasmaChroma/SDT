aurora { version: "1.0" }

globals { sr: 48000, block: 256, tempo: 120 }

patch Lead {
  out: stem("lead"),
  graph: {
    nodes: [
      { id: "osc", type: osc_saw_blep },
      { id: "env", type: env_adsr, params: { a: 4ms, d: 90ms, s: 0.2, r: 80ms } },
      { id: "vca", type: vca, params: { gain: 1.0, cv: 0.0 } }
    ],
    connect: [
      { from: "osc", to: "vca.in" },
      { from: "env.out", to: "vca.cv", rate: control }
    ],
    io: { out: "vca" }
  }
}

section Motif at 0beats dur 1beats {
  play Lead { at: 0beats, dur: 0.5beats, pitch: C3, vel: 0.9 }
}

score {
  section Form at 0beats dur 8beats {
    use Motif x 2 at 0beats
    use Motif x 2 at 2beats
  }
}
