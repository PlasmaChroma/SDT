aurora { version: "1.0" }

globals {
  sr: 48000,
  block: 256,
  tempo: 76,
  tail_policy: fixed(1s)
}

outputs {
  stems_dir: "./renders/stems/",
  midi_dir: "./renders/midi/",
  mix_dir: "./renders/mix/",
  meta_dir: "./renders/meta/",
  master: "master.wav",
  render_json: "render.json"
}

patch MixUtil {
  out: stem("mix_util"),
  graph: {
    nodes: [
      { id: "osc", type: osc_tri_blep, params: { freq: 84Hz } },
      { id: "env", type: env_adsr, params: { a: 18ms, d: 260ms, s: 0.62, r: 620ms } },
      { id: "mx", type: audio_mix, params: { gain: -3dB, mix: 0.75, bias: 0.0 } },
      { id: "amp", type: gain, params: { gain: -11dB } }
    ],
    connect: [
      { from: "osc", to: "amp.in" },
      { from: "env.out", to: "mx.mix", rate: control, map: { type: set, min: 0.25, max: 1.0 } },
      { from: "env.out", to: "mx.gain", rate: control, map: { type: set, min: 0.2, max: 1.6 } }
    ],
    io: { out: "amp" }
  }
}

score {
  section A at 0s dur 3.5s {
    play MixUtil { at: 0s, dur: 3.5s, vel: 0.92, pitch: C2 }
    automate patch.MixUtil.mx.bias smooth { 0s: -0.08, 1.75s: 0.06, 3.5s: -0.04 }
  }
}
