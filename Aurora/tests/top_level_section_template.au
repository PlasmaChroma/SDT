aurora { version: "1.0" }

globals { sr: 48000, block: 256, tempo: 120 }

patch Tone {
  out: stem("tone"),
  graph: {
    nodes: [
      { id: "osc", type: osc_saw_blep },
      { id: "env", type: env_adsr, params: { a: 5ms, d: 80ms, s: 0.2, r: 80ms } },
      { id: "vca", type: vca, params: { gain: 1.0, cv: 0.0 } }
    ],
    connect: [
      { from: "osc", to: "vca.in" },
      { from: "env.out", to: "vca.cv", rate: control }
    ],
    io: { out: "vca" }
  }
}

section PhraseA at 0beats dur 2beats {
  play Tone { at: 0beats, dur: 0.5beats, pitch: C3, vel: 0.9 }
  play Tone { at: 1beats, dur: 0.5beats, pitch: G2, vel: 0.85 }
}

score {
  play PhraseA x 1 at 0beats
  play PhraseA x 1 at 4beats
}
