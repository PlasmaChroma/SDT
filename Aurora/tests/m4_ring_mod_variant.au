aurora { version: "1.0" }

globals {
  sr: 48000,
  block: 256,
  tempo: 78,
  tail_policy: fixed(1s)
}

outputs {
  stems_dir: "./renders/stems/",
  midi_dir: "./renders/midi/",
  mix_dir: "./renders/mix/",
  meta_dir: "./renders/meta/",
  master: "master.wav",
  render_json: "render.json"
}

patch RingVariant {
  out: stem("ring_variant"),
  graph: {
    nodes: [
      { id: "osc", type: osc_sine, params: { freq: 130Hz } },
      { id: "env", type: env_adsr, params: { a: 20ms, d: 280ms, s: 0.52, r: 520ms } },
      { id: "rm", type: ring_mod_diode, params: { shape: tri, freq: 48Hz, depth: 1.0, mix: 0.9, bias: 0.02 } },
      { id: "amp", type: gain, params: { gain: -10dB } }
    ],
    connect: [
      { from: "osc", to: "amp.in" },
      { from: "env.out", to: "rm.depth", rate: control, map: { type: set, min: 0.5, max: 1.8 } },
      { from: "env.out", to: "rm.mix", rate: control, map: { type: set, min: 0.2, max: 1.0 } }
    ],
    io: { out: "amp" }
  }
}

score {
  section A at 0s dur 3.5s {
    play RingVariant { at: 0s, dur: 3.5s, vel: 0.9, pitch: E2 }
    automate patch.RingVariant.rm.freq smooth { 0s: 18Hz, 1.75s: 95Hz, 3.5s: 25Hz }
  }
}
