aurora { version: "1.0" }

globals { sr: 48000, block: 256, tempo: 60, tail_policy: fixed(150ms) }

patch ClipCurve {
  out: stem("m1_cv_clip_curve"),
  graph: {
    nodes: [
      { id: "osc", type: osc_sine, params: { freq: 110Hz } },
      { id: "env", type: env_adsr, params: { a: 10ms, d: 180ms, s: 0.6, r: 120ms } },
      { id: "clip", type: cv_clip, params: { min: 0.1, max: 0.9, bias: 0.0 } },
      { id: "vca", type: vca, params: { gain: 1.0, cv: 0.0 } },
      { id: "amp", type: gain, params: { gain: -11dB } }
    ],
    connect: [
      { from: "osc", to: "amp.in" },
      { from: "amp", to: "vca.in" },
      { from: "env.out", to: "clip.in", rate: control },
      { from: "clip.out", to: "vca.cv", rate: control, map: { type: set, curve: smooth } }
    ],
    io: { out: "vca" }
  }
}

score {
  section A at 0s dur 1.8s {
    play ClipCurve { at: 0.1s, dur: 0.7s, pitch: C3, vel: 0.9 }
    play ClipCurve { at: 1.0s, dur: 0.6s, pitch: G2, vel: 0.85 }
  }
}
