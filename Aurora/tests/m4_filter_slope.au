aurora { version: "1.0" }

globals {
  sr: 48000,
  block: 256,
  tempo: 82,
  tail_policy: fixed(1s)
}

outputs {
  stems_dir: "./renders/stems/",
  midi_dir: "./renders/midi/",
  mix_dir: "./renders/mix/",
  meta_dir: "./renders/meta/",
  master: "master.wav",
  render_json: "render.json"
}

patch Slope12 {
  out: stem("slope12"),
  graph: {
    nodes: [
      { id: "osc", type: osc_saw_blep, params: { freq: 115Hz } },
      { id: "filt", type: svf, params: { mode: lp, cutoff: 820Hz, q: 0.75, slope: 12, drive: 2.4 } },
      { id: "amp", type: gain, params: { gain: -12dB } }
    ],
    connect: [
      { from: "osc", to: "filt.in" },
      { from: "filt", to: "amp.in" }
    ],
    io: { out: "amp" }
  }
}

patch Slope24 {
  out: stem("slope24"),
  graph: {
    nodes: [
      { id: "osc", type: osc_saw_blep, params: { freq: 115Hz } },
      { id: "filt", type: svf, params: { mode: lp, cutoff: 820Hz, q: 0.75, slope: 24, drive: 2.4 } },
      { id: "amp", type: gain, params: { gain: -12dB } }
    ],
    connect: [
      { from: "osc", to: "filt.in" },
      { from: "filt", to: "amp.in" }
    ],
    io: { out: "amp" }
  }
}

score {
  section A at 0s dur 2.6s {
    play Slope12 { at: 0s, dur: 2.6s, vel: 0.9, pitch: A2 }
    play Slope24 { at: 0s, dur: 2.6s, vel: 0.9, pitch: A2 }
  }
}
