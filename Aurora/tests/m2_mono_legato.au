aurora { version: "1.0" }

globals { sr: 48000, block: 256, tempo: 60, tail_policy: fixed(150ms) }

patch MonoLead {
  mono: true,
  legato: true,
  retrig: legato,
  out: stem("m2_mono_legato"),
  graph: {
    nodes: [
      { id: "osc", type: osc_saw_blep, params: { freq: 110Hz } },
      { id: "env", type: env_adsr, params: { a: 30ms, d: 120ms, s: 0.55, r: 160ms } },
      { id: "filt", type: svf, params: { mode: lp, cutoff: 1400Hz, q: 0.8 } },
      { id: "vca", type: vca, params: { gain: 1.0, cv: 0.0 } },
      { id: "amp", type: gain, params: { gain: -12dB } }
    ],
    connect: [
      { from: "osc", to: "filt.in" },
      { from: "filt", to: "amp.in" },
      { from: "amp", to: "vca.in" },
      { from: "env.out", to: "vca.cv", rate: control }
    ],
    io: { out: "vca" }
  }
}

score {
  section A at 0s dur 1.6s {
    // Deliberate overlaps to exercise mono+legato+retrig policy.
    play MonoLead { at: 0.10s, dur: 0.70s, pitch: C3, vel: 0.9 }
    play MonoLead { at: 0.45s, dur: 0.65s, pitch: E3, vel: 0.85 }
    play MonoLead { at: 0.80s, dur: 0.55s, pitch: G3, vel: 0.8 }
  }
}
