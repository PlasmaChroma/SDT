aurora { version: "1.0" }

globals {
  sr: 48000,
  block: 256,
  tempo: 80,
  tail_policy: fixed(1s)
}

outputs {
  stems_dir: "./renders/stems/",
  midi_dir: "./renders/midi/",
  mix_dir: "./renders/mix/",
  meta_dir: "./renders/meta/",
  master: "master.wav",
  render_json: "render.json"
}

patch RingVoice {
  out: stem("ring_voice"),
  graph: {
    nodes: [
      { id: "osc", type: osc_sine, params: { freq: 120Hz } },
      { id: "env", type: env_adsr, params: { a: 25ms, d: 450ms, s: 0.35, r: 700ms } },
      { id: "rm", type: ring_mod, params: { shape: sine, freq: 37Hz, depth: 1.0, mix: 0.85, bias: 0.0 } },
      { id: "vca", type: vca, params: { gain: 1.0, cv: 1.0 } },
      { id: "amp", type: gain, params: { gain: -9dB } }
    ],
    connect: [
      { from: "osc", to: "amp.in" },
      { from: "env.out", to: "rm.mix", rate: control, map: { type: set, min: 0.25, max: 1.0 } },
      { from: "env.out", to: "rm.depth", rate: control, map: { type: set, min: 0.4, max: 1.4 } },
      { from: "env.out", to: "vca.cv", rate: control, map: { type: set, min: 0.0, max: 1.0 } }
    ],
    io: { out: "amp" }
  }
}

score {
  section A at 0s dur 4s {
    play RingVoice { at: 0s, dur: 4s, vel: 0.92, pitch: A2 }
    automate patch.RingVoice.rm.freq smooth { 0s: 22Hz, 2s: 90Hz, 4s: 28Hz }
  }
}
