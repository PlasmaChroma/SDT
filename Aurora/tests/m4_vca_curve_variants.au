aurora { version: "1.0" }

globals {
  sr: 48000,
  block: 256,
  tempo: 78,
  tail_policy: fixed(1s)
}

outputs {
  stems_dir: "./renders/stems/",
  midi_dir: "./renders/midi/",
  mix_dir: "./renders/mix/",
  meta_dir: "./renders/meta/",
  master: "master.wav",
  render_json: "render.json"
}

patch VcaLinear {
  out: stem("vca_linear"),
  graph: {
    nodes: [
      { id: "osc", type: osc_sine, params: { freq: 100Hz } },
      { id: "env", type: env_adsr, params: { a: 12ms, d: 180ms, s: 0.55, r: 500ms } },
      { id: "vca", type: vca, params: { gain: 1.0, cv: 1.0, curve: linear, curve_amt: 2.8 } },
      { id: "amp", type: gain, params: { gain: -10dB } }
    ],
    connect: [
      { from: "osc", to: "amp.in" },
      { from: "env.out", to: "vca.cv", rate: control, map: { type: set, min: 0.0, max: 1.0 } }
    ],
    io: { out: "amp" }
  }
}

patch VcaExp {
  out: stem("vca_exp_amt"),
  graph: {
    nodes: [
      { id: "osc", type: osc_sine, params: { freq: 100Hz } },
      { id: "env", type: env_adsr, params: { a: 12ms, d: 180ms, s: 0.55, r: 500ms } },
      { id: "vca", type: vca, params: { gain: 1.0, cv: 1.0, curve: exp, curve_amt: 2.8 } },
      { id: "amp", type: gain, params: { gain: -10dB } }
    ],
    connect: [
      { from: "osc", to: "amp.in" },
      { from: "env.out", to: "vca.cv", rate: control, map: { type: set, min: 0.0, max: 1.0 } }
    ],
    io: { out: "amp" }
  }
}

patch VcaLog {
  out: stem("vca_log_amt"),
  graph: {
    nodes: [
      { id: "osc", type: osc_sine, params: { freq: 100Hz } },
      { id: "env", type: env_adsr, params: { a: 12ms, d: 180ms, s: 0.55, r: 500ms } },
      { id: "vca", type: vca, params: { gain: 1.0, cv: 1.0, curve: log, curve_amount: 2.8 } },
      { id: "amp", type: gain, params: { gain: -10dB } }
    ],
    connect: [
      { from: "osc", to: "amp.in" },
      { from: "env.out", to: "vca.cv", rate: control, map: { type: set, min: 0.0, max: 1.0 } }
    ],
    io: { out: "amp" }
  }
}

score {
  section A at 0s dur 2.8s {
    play VcaLinear { at: 0s, dur: 2.8s, vel: 0.9, pitch: A2 }
    play VcaExp { at: 0s, dur: 2.8s, vel: 0.9, pitch: A2 }
    play VcaLog { at: 0s, dur: 2.8s, vel: 0.9, pitch: A2 }
  }
}
